{
    "manifest_version": 2,
    "name": "ACX Tweaks",
    "description": "Quality of life improvements for the Astral Codex Ten blog on Substack.",
    "version": "0.5",
    "permissions": [
        "storage"
    ],
    "icons": {
        "128": "icons/acx-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://astralcodexten.substack.com/*"
            ],
            "js": ["lib/jquery-3.5.1.min.js", "js/options.js", "js/styles.js", "js/content.js"],
            "css": ["skin/css/style.css"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": ["icons/question-circle-regular.svg"],
    "browser_action": {
        "default_popup": "skin/popup.html",
        "default_title": "ACX Tweaks"
    }
}
